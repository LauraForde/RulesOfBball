<Page
    x:Class="RulesOfBball.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RulesOfBball"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/basket.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <Button x:ConnectionId='1' x:Name="button" HorizontalAlignment="Stretch" Foreground="Plum" FontSize="30" 
                FontWeight="Bold" Content="Let's Get Started!" Margin="43,0,33,46" VerticalAlignment="Bottom"                     />
        <TextBlock HorizontalAlignment="Stretch" Margin="66,251,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="137" Width="284">
        	<Run Foreground="Yellow" FontSize="30" FontWeight="Bold" Text="You will find out the basic rules for basketball here :)"/>
        </TextBlock>
    </Grid>
</Page>

